{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tapioca-sdk/*": ["lib/tapioca-sdk/src/*"]
    }
  },
  "include": [
    "./hardhat.config.ts",
    "./hardhat_scripts",
    "hardhat_test",
    "./typechain",
    "./tasks",
    "./deploy",
    "./lib/tapioca-sdk/src/*"
  ]
}
